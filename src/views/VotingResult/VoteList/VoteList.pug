.vote-list-container
  .vote-list(
    v-masonry
    horizontal-order="true"
    item-selector=".vote-card"
    transition-duration="0"
  )
    vote-card.vote-card(
      v-masonry-tile
      v-for="(vote, $index) in moodMemberList"
      :vote="vote"
      :key="$index"
      :data-num="$index + 1"
      :name="vote.createdBy ? vote.createdBy.name : $t('COMMON.USERS.ANONYMOUS_USER')"
      :mood="vote.score"
      :comment="vote.comment"
      :hue="vote.hueMood")
  .loader-container
    Loader(v-if="isLoading")
  infinite-loader(@intersect="infiniteHandler")
